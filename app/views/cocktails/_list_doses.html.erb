<% @cocktail.doses.each do |dose| %>
  <li class="list-group-item list-group-item-info">
    <div class="inline">
      <div>
        <p><%= dose.description %></p>
        <p><%= dose.ingredient.name %></p>
      </div>
      <div>
        <%= link_to "Delete", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </li>
<% end %>
